<%- include ("partials/header") %> 

<main id="contenedorVentas">
    <h2>ventas</h2>

    <div class="nueva-venta">
        <h4>AÃ±adir nueva venta</h4>

        <form action="/ventas" method="POST">
            <div class="form-row">
                <div class="col-2">
                    <input type="date" name="date" class="form-control" max="<%=maxDate%>" value="<%=maxDate%>">
                </div>
                <div class="col-4">
                    <select id="prodCode" name="prodCode" class="form-select" >
                        <% for( let i= 0; i < data.length; i++ ) { %>
                            <option  value="<%= data[i].descr %>"><%= data[i].descr %></option> 
                        <% } %>
                    </select>
                </div>
                <div class="col-2">
                    <input type="number" name="quant" min="1" class="form-control" placeholder="CANTIDAD">
                </div>
                <div class="col-2">
                    <input type="number" name="prodPrice" class="form-control" placeholder="MONTO">
                </div>
                <div class="col">
                    <div class="addSale" onclick="addSale()">+</div>
                </div>
                <input type="submit" value="AGREGAR TODO" class="btn btn-primary my-2">
            </div>
        </form>
        <div class="lista">

        </div>
    </div>

</main>
<script src="/js/userSales.js"></script>


<%- include ("partials/footer") %> 


