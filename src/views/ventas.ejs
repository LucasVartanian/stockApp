<%- include ("partials/header") %> 

<main id="contenedorVentas">
    <h2>ventas</h2>

    <div class="nueva-venta">
        <h4>AÃ±adir nueva venta</h4>

        <form action="/ventas" method="POST" id="formAddVenta">
            <div class="form-row">
                <div class="col-2">
                    <label for="date">Fecha</label>
                    <input type="date" name="date" class="form-control" max="<%=maxDate%>" value="<%=maxDate%>">
                </div>
                <div class="col-4">
                    <label for="prodCode">Producto</label>
                    <select id="prodCode" name="prodCode" class="form-select" >
                        <% for( let i= 0; i < data.length; i++ ) { %>
                            <option  value="<%= data[i].descr %>"><%= data[i].descr %></option> 
                        <% } %>
                    </select>
                </div>
                <div class="col-2">
                    <label for="quant">Cantidad de productos</label>
                    <input type="number" name="quant" class="form-control" placeholder="CANTIDAD">
                </div>
                <div class="col-2">
                    <label for="quant">Monto total</label>
                    <input type="number" name="prodPrice" class="form-control" placeholder="MONTO">
                </div>
                <div class="col">
                    <div class="addSale" onclick="addSale()" style="cursor:pointer;">+</div>
                </div>
                <input type="submit" value="AGREGAR TODO" class="btn btn-primary my-2">
            </div>
        </form>
        <div class="lista">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th class="col-3">Fecha</th>
                        <th class="col-3">Producto</th>
                        <th class="col-3">Cantidad</th>
                        <th class="col-3">Precio</th>
                    </tr>
                </thead>
                <tbody class="bodyTabla border-right border-left border-bottom">
                
                </tbody>
            </table>

        </div>
    </div>

</main>
<script src="/js/userSales.js"></script>


<%- include ("partials/footer") %> 


